# **************************************************************************** #
NAME	= philo

CC		= gcc
CFLAG	= -g -Wall -Wextra -Werror
TFLAG	= -pthread

RM		= rm -f
# **************************************************************************** #

SRC		= $(wildcard *.c)
OBJ		= $(SRC:.c=.o)

# **************************************************************************** #

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAG) $(TFLAG) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# **************************************************************************** #

.PHONY: all clean fclean re
